<Window x:Class="SnakeGame.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8">
            <TextBlock Text="Player:" VerticalAlignment="Center"/>
            <TextBlock x:Name="PlayerNameText" FontWeight="Bold" Margin="6,0" VerticalAlignment="Center"/>
            <Button Content="Leaderboard" Margin="12,0" Click="OpenLeaderboard_Click"/>
            <TextBlock x:Name="ScoreText" Margin="12,0" VerticalAlignment="Center"/>
        </StackPanel>
        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="#FFEEEEEE" Focusable="True"/>
    </Grid>
</Window>